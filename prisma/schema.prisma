// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model AudienceCategory {
  id    Int    @id @default(autoincrement())
  title String @unique
  plays Play[]

}

model Tag {
  id    Int    @id @default(autoincrement())
  title String @unique
  plays Play[]
}

model Play {
  id       Int     @id @default(autoincrement())
  title    String
  abstract String?
  duration Int?

  audienceCategories   AudienceCategory[]
  tags                Tag[]
}

model Artist {
  id              Int     @id @default(autoincrement())
  firstname       String
  lastname        String
  biography       String?
  email           String? 
  facebook_link   String? 
  instagram_link  String? 
}